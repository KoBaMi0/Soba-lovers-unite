<fieldset class="fieldset w-xs dark:bg-black bg-white border border-base-300 p-4 rounded-box ml-auto mr-auto mt-[150px] mb-[150px]">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%= f.label :email, "メールアドレス", class: "fieldset-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>

    <%= f.label :password, "パスワード", class: "fieldset-label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "input" %>

    <%= f.submit "ログイン", class: "btn mt-4" %>

  <% end %>
</fieldset>
